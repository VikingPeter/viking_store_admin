<%= form_for category, {:html => { :class => "col-md-6" } } do |f| %>
  <h3><%= form_type %> Category</h3>
  <div class="form-group">
    <%= f.label "Category ID:" %>
    <%= category.id ? category.id : "N/A" %>
  </div>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, placeholder: "enter the category name here", :class => "form-control", :value => category.name %>
  </div>
  <%= f.submit (form_type == "Edit" ? "Update" : form_type) + " Category", :class => "btn btn-large btn-primary btn-block" %>
<% end %>