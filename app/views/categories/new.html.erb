<%= form_for @category, {:html => { :class => "col-md-6" } } do |f| %>
  <h3>New Category</h3>
  <div class="form-group">
    <%= f.label "Category ID:" %>
    <%= @category.id ? @category.id : "N/A" %>
  </div>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, placeholder: "enter the category name here", :class => "form-control", :value => @category.name %>
  </div>
  <%= f.submit "Create Category", :class => "btn btn-large btn-primary btn-block" %>
<% end %>