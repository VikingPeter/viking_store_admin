<section class="col-md-10">
  <% flash.each do |name, msg| %>
      <%= content_tag :div, msg, class: name %>
  <% end %>
  <h2>Product Categories</h2>
  <%= link_to "Add a New Category", "#" %>

  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>EDIT</th>
        <th>DELETE</th>
      </tr>
    </thead>
    <tbody>
      <%= render @categories %>
    </tbody>
  </table>

<section>