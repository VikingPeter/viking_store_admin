<h3>Category <%= @category.id %>: <%= @category.name %></h3>
<p>Category ID: <%= @category.id %></p>
<p>Name: <%= @category.name %></p>

<p><%= link_to "Edit Category", edit_category_path(@category.id) %></p>
<p><%= link_to "Delete Category", "category#delete" %></p>

<h4>Products in <%= @category.name %>:</h4>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
    </tr>
  </thead>
  <% @category.products.each do |product| %>
    <tr>
      <td><%= product.id %></td>
      <td><%= product.name %></td>
    </tr>
  <% end %>
</table>