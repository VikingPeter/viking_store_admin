<h2><%=if @user
    "#{@user.first_name} #{@user.last_name}'s Orders"
    else
      "Orders"
    end%></h2>
<div class="panel">
  <% if @user %>
    <%= link_to "Create Order for #{@user.first_name} #{@user.last_name}", new_user_order_path(@user), :class => "btn btn-block btn-default btn-lg btn-primary" %>
  <% else %>
    <em>Create new orders from within <%= link_to "User", users_path %> Profiles</em><br>
  <% end %>

  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>ID</th>
        <th>User ID</th>
        <th>Address</th>
        <th>City</th>
        <th>State</th>
        <th>Quantity</th>
        <th>Total Value</th>
        <th>Status</th>
        <th>Date Placed</th>
        <th>SHOW</th>
        <th>EDIT</th>
        <th>DELETE</th>
      </tr>
    </thead>
    <tbody>

      <%= render @orders %>

    </tbody>
  </table>
</div>