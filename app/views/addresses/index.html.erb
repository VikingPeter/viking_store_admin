<h2><%=if @user 
    "#{@user.first_name} #{@user.last_name}'s Addresses"
    else
      "Addresses"
    end%></h2>
<div class="panel">
  <% if @user %>
    <%= link_to "Create Address for #{@user.first_name} #{@user.last_name}", new_user_address_path(@user), :class => "btn btn-block btn-default btn-lg btn-primary" %>
  <% else %>
    <em>Create new addresses from within <%= link_to "User", users_path %> Profiles</em><br>
  <% end %>

  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>ID</th>
        <th>User</th>
        <th>Address</th>
        <th>City</th>
        <th>State</th>
        <th>Orders</th>
        <th>Created At</th>
        <th>SHOW</th>
        <th>EDIT</th>
        <th>DELETE</th>
      </tr>
    </thead>
    <tbody>

      <%= render @addresses %>

    </tbody>
  </table>
</div>