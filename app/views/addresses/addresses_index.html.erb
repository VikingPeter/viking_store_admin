<h2>Addresses</h2>

<%= link_to "Add a New Address", new_address_path, :class => "btn btn-large btn-primary btn-block", :role => "button" %>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>ID</th>
      <th>User</th>
      <th>Address</th>
      <th>City</th>
      <th>State</th>
      <th>Orders</th>
      <th>Created At</th>
      <th>SHOW</th>      
      <th>EDIT</th>
      <th>DELETE</th>
    </tr>
  </thead>
  <tbody>
    <%= render @addresses %>
  </tbody>
</table>